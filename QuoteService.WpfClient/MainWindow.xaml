<Window x:Class="QuoteService.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Random quotes" Height="250" Width="400">
		<Grid>
				<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
						<RowDefinition Height="*"/>
						<RowDefinition Height="5*"/>
				</Grid.RowDefinitions>
				<Button x:Name="GetQuote" Grid.Row="0" Click="GetQuote_Click">Get random quote</Button>
				<TextBox x:Name="TextQuote" Grid.Row ="1" TextWrapping="Wrap" />
		</Grid>
</Window>